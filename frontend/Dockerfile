# frontend/Dockerfile

# 1. Build Stage
FROM node:18-alpine AS build
WORKDIR /app
COPY package.json .
RUN npm install
COPY . .
# This variable is needed during build for Vite to know where the backend is
ENV VITE_API_BASE_URL=http://localhost:8080/api
RUN npm run build

# 2. Serve Stage (Nginx)
FROM nginx:alpine
# Copy the 'dist' folder (Vite's build output) to Nginx
COPY --from=build /app/dist /usr/share/nginx/html
# Config for React Router (redirects all 404s to index.html)
RUN echo 'server { listen 80; root /usr/share/nginx/html; index index.html; location / { try_files $uri $uri/ /index.html; } }' > /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]